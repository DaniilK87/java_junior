<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1987</property>
        <property name="show_sql">true</property>
        <!--  none, create, create-drop, update, validate -->
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="org.example.homework4.entity.User"/>
        <mapping class="org.example.homework4.entity.Post"/>
        <mapping class="org.example.homework4.entity.PostComment"/>
    </session-factory>
</hibernate-configuration>